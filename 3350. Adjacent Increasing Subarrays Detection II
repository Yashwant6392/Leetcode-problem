class Solution {
public:
    int maxIncreasingSubarrays(vector<int>& nums) {
        int n = nums.size();
        int current = 1;
        int prev = 0;
        int maxi = 0;
        for (int i = 1; i < n; i++) {
            if (nums[i] > nums[i - 1]) {
                current++;
            } else {
                prev = current;
                current = 1;
            }
            maxi = max(maxi, current / 2);
            maxi = max(maxi, min(current, prev));
        }
        return maxi;
    }
};

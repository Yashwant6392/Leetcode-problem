class Solution {
public:
    int maximumEnergy(vector<int>& energy, int k) {
        
        int n=energy.size();
        // int maxsum=INT_MIN;
        // for(int i=0;i<n;i++)
        // {
        //     int sum=0;
        //     int j=i;
        //     while(j<n)
        //     {
        //         sum+=energy[j];
        //         j+=k;
        //     }
        //     maxsum=max(maxsum,sum);

        // }
        // return maxsum;
        vector<int>x=energy;
        for(int i=n-1-k;i>=0;i--)
        {
            x[i]=energy[i]+x[i+k];
        }
        return *max_element(x.begin(),x.end());

    }
};
